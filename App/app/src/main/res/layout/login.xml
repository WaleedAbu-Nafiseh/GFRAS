<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/mainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity">


    <ImageView
        android:id="@+id/logoimg"
        android:layout_width="236dp"
        android:layout_height="132dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/inimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:textColor="@color/colorRed"
        android:id="@+id/txtWrong"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/stdid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoimg" />
    <EditText
        android:id="@+id/stdid"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/StudentID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoimg"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText

        android:id="@+id/edtStudentPassword"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/StudentPassword"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/stdid"
        app:layout_constraintRight_toRightOf="@+id/stdid"
        app:layout_constraintTop_toBottomOf="@+id/stdid" />

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Login"
        android:textColor="#ffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/edtStudentPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtStudentPassword"
        app:layout_constraintTop_toBottomOf="@id/edtStudentPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>